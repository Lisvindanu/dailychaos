<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.DailyChaos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/chaos_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/chaos_blue_light</item>
        <item name="colorOnPrimaryContainer">@color/chaos_blue_dark</item>

        <item name="colorSecondary">@color/kazuma_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/kazuma_green_light</item>
        <item name="colorOnSecondaryContainer">@color/kazuma_green_dark</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Main theme that extends base -->
    <style name="Theme.DailyChaos" parent="Base.Theme.DailyChaos">
        <!-- Add any additional customizations here -->
    </style>

    <!-- Legacy theme for backward compatibility -->
    <style name="Theme.Project" parent="Theme.DailyChaos" />

</resources>